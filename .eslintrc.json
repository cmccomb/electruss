{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "no-implicit-globals": "error"
  },
  "overrides": [
    {
      "files": ["tests/unit/**/*.js"],
      "env": { "jest": true }
    },
    {
      "files": ["tests/ui/**/*.js"],
      "extends": ["plugin:playwright/recommended"],
      "plugins": ["playwright"]
    },
    {
      "files": ["tests/**/*.test.js"],
      "extends": ["plugin:jest/recommended"],
      "plugins": ["jest"]
    }
  ]
}
